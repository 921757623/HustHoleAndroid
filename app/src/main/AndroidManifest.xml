<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hustholetest1">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HustHoleTest1">
        <activity android:name=".View.RegisterAndLogin.Activity.WelcomeActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.RegisterAndLogin.Activity.RegisterActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.RegisterAndLogin.Activity.LoginActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.RegisterAndLogin.Activity.Login2Activity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.RetrievePassword.Activity.ForgetPasswordActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.RetrievePassword.Activity.VerificationCodeActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.RetrievePassword.Activity.ModifyPasswordActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.HomePage.Activity.HomePageActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>